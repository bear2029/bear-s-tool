<link rel="stylesheet" href="/public/css/dataUriConverter.css" />
<div class="narrow-page">
	<div class="row main">
		<div class="col-sm-6">
			<form class="" method="post", enctype="multipart/form-data">
				<h1>Upload your image file to convert</h1>
				<div class="form-group">
					<input name="file" type="file"/>
				</div>
				<div class="form-group">
					<input type="submit" class="btn primary" />
				</div>
			</form>
		</div>
		<div class="preview col-sm-6">
		{{#if dataUri}}
			<div class="css">
				<h3>DATA URI</h3>
				<input class="code form-control" value="{{dataUri}}" />
			</div>
			<div class="css">
				<h3>CSS</h3>
				<textarea class="form-control">background-image:url({{dataUri}});
				width: 300px;
				height: 100px;
				background-size: 100% auto;
				background-repeat: no-repeat;</textarea>
			</div>
			<div class="sample">
				<h3>CSS SAMPLE</h3>
				<div class="obj" style="background-image:url({{dataUri}});"></div>
			</div>
			<div class="sample">
				<h3>IMAGE SAMPLE</h3>
				<img src="{{dataUri}}"/>
			</div>
		{{/if}}
		</div>
	</div>
</div>
